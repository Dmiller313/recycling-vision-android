<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d5c61"
    tools:context=".recycling_references.RecyclingReference">


    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/references"
        android:textAlignment="center"
        android:textColor="#00263c"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/referenceLink"
        android:layout_width="343dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/toronto_logo" />

    <TextView
        android:id="@+id/text"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Click On Image to Visit City of Toronto Website"
        android:textColor="#00263c"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/referenceLink"
        app:layout_constraintStart_toStartOf="@+id/referenceLink"
        app:layout_constraintTop_toBottomOf="@+id/referenceLink" />


</androidx.constraintlayout.widget.ConstraintLayout>